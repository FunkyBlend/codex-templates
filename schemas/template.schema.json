{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CodexDepot Template Metadata",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^template\\.[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "type": {
      "type": "string",
      "const": "template"
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 120
    },
    "summary": {
      "type": "string",
      "minLength": 10,
      "maxLength": 240
    },
    "tags": {
      "type": "array",
      "minItems": 3,
      "maxItems": 8,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9-]{1,31}$"
      }
    },
    "author": {
      "type": "string",
      "minLength": 2,
      "maxLength": 80
    },
    "license": {
      "type": "string",
      "pattern": "^[A-Za-z0-9.+-]+$"
    },
    "compatibility": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 40
      }
    },
    "updated_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "created_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"]
    },
    "safety_notes": {
      "type": "string",
      "minLength": 5,
      "maxLength": 500
    },
    "source_url": {
      "type": "string",
      "pattern": "^https?://.+$"
    },
    "install_path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "entry_files": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 200
      }
    },
    "template_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "required": [
    "id",
    "type",
    "title",
    "summary",
    "tags",
    "author",
    "license",
    "compatibility",
    "updated_at",
    "install_path",
    "entry_files",
    "template_version"
  ]
}

